<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.madaim.ex3.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/op1"
        android:layout_marginTop="102dp"
        android:textSize="20dp"
        android:layout_marginRight="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp" />
    <EditText
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginStart="55dp"
        android:id="@+id/editText"
        android:background="@drawable/border"
        >
    </EditText>
    <TextView
        android:id="@+id/tvOp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/op2"
        android:textSize="20dp"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/btMulti"
        android:layout_toStartOf="@+id/editText" />
    <EditText
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:id="@+id/editText2"
        android:layout_alignBaseline="@+id/tvOp2"
        android:layout_alignBottom="@+id/tvOp2"
        android:layout_toStartOf="@+id/btMulti" />

    <Button
        android:enabled="false"
        android:id="@+id/btPlus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/btminus"
        android:layout_alignBaseline="@+id/btMinus"
        android:layout_alignBottom="@+id/btMinus"
        android:layout_toStartOf="@+id/editText2" />
    <Button
        android:enabled="false"
        android:id="@+id/btMinus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/btplus"
        android:layout_marginTop="48dp"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/textView" />
    <Button
        android:enabled="false"
        android:id="@+id/btMulti"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/btdiv"
        android:layout_alignBaseline="@+id/btDiv1"
        android:layout_alignBottom="@+id/btDiv1"
        android:layout_toEndOf="@+id/editText" />
    <Button
        android:enabled="false"
        android:id="@+id/btDiv1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/btmul"
        android:layout_alignBaseline="@+id/btPlus"
        android:layout_alignBottom="@+id/btPlus"
        android:layout_alignStart="@+id/editText"
        android:layout_marginStart="33dp" />

    <View
        android:layout_width="300dp"
        android:layout_height="5dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/btMinus"
        android:background="@drawable/border"
        android:id="@+id/view" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/ew"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/view"
        android:layout_toStartOf="@+id/btPlus"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btDiv1"
        android:background="@drawable/border"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/btMulti"
        android:layout_alignBottom="@+id/textView2" />


</RelativeLayout>